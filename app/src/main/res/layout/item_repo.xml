<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.omd.pasolinisdv.ui.list.RepoViewModel"/>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="@{() -> viewModel.onClick()}"
        android:padding="16dp">

        <ImageView
            android:id="@+id/section_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/section_icon_content_description"
            android:tint="@color/gray"
            app:srcCompat="@drawable/ic_section_12dp_black"/>

        <TextView
            android:id="@+id/section_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/section_icon"
            android:layout_toRightOf="@id/section_icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="4dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@{viewModel.name}"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="18sp"
            tools:text="Plastix/KotlinBoilerplate"/>

        <TextView
            android:id="@+id/section_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/section_name"
            android:layout_toEndOf="@id/section_icon"
            android:layout_toRightOf="@id/section_icon"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="4dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@{viewModel.description}"
            android:textSize="14sp"
            tools:text="Kotlin Android Boilerplate project with MVP architecture using RxJava, Dagger 2, and more!"/>

    </RelativeLayout>
</layout>
